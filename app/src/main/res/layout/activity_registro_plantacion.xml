<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroPlantacion">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Banner de fondo -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/banner1"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ban_2"
                        tools:ignore="ImageContrastCheck" />
                    <!-- Figura arriba de la imagen -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/sobrebanner2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="75dp"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:shadowColor="#D7000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:text="@string/registro_de_plantaci_n"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="VisualLintOverlap" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/opensans_light"
                        android:gravity="center"
                        android:shadowColor="#D7000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:text="@string/actividad_de_plantaci_n"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck,TextContrastCheck" />

                    <ImageButton
                        android:id="@+id/BotonVolver"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:layout_margin="20dp"
                        android:backgroundTint="#00D108"
                        android:contentDescription="@string/boton_regresar"
                        android:elevation="8dp"
                        android:src="@drawable/button_regresar"
                        tools:ignore="ImageContrastCheck" />
                </FrameLayout>
                <!--Fin del banner-->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <!--Cards para navegación-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNavegable2"
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:strokeColor="#544CAF50"
                            app:strokeWidth="1dp">

                            <!-- Icono -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="@string/hoja"
                                android:src="@drawable/hoja"
                                tools:ignore="ImageContrastCheck" />

                            <!-- Texto -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/opensans_light"
                                android:text="@string/estad_sticas"
                                android:textAlignment="center"
                                android:textColor="#757575"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNavegable3"
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:strokeColor="#544CAF50"
                            app:strokeWidth="1dp">

                            <!-- Icono -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="@string/hoja"
                                android:src="@drawable/hoja"
                                tools:ignore="ImageContrastCheck" />

                            <!-- Texto -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/opensans_light"
                                android:text="@string/consejos"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardNavegable4"
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:strokeColor="#544CAF50"
                            app:strokeWidth="1dp"
                            tools:ignore="TextSizeCheck">

                            <!-- Icono -->
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="@string/hoja"
                                android:src="@drawable/hoja"
                                tools:ignore="ImageContrastCheck" />

                            <!-- Texto -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="40dp"
                                android:fontFamily="@font/opensans_light"
                                android:text="@string/recursos"
                                android:textAlignment="center"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </HorizontalScrollView>
                <!--contenido de registro-->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingStart="25sp"
                    android:paddingEnd="25sp"
                    android:text="@string/nombre_de_la_especie_rbol_planta" />


                <EditText
                    android:id="@+id/Edtext_Especie"
                    android:layout_width="370dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:autofillHints="description"
                    android:backgroundTint="#00AA64"
                    android:ems="10"
                    android:hint="@string/ingrese_el_nombre_de_la_especie_rbol_planta"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />

                <!--Elementos horizontales-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="170sp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="25sp"
                            android:paddingEnd="25dp"
                            android:text="@string/precio_especie" />


                        <EditText
                            android:id="@+id/Edtext_PrecioEsp"
                            android:layout_width="170sp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_margin="20sp"
                            android:backgroundTint="#00AA64"
                            android:ems="10"
                            android:hint="@string/_0"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColorHint="#2E7D32"
                            android:textSize="14sp"
                            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="25sp"
                            android:paddingEnd="5sp"
                            android:text="@string/cantidad_sembrada" />


                        <EditText
                            android:id="@+id/Edtext_CantidadSembrada"
                            android:layout_width="170sp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_margin="20sp"
                            android:backgroundTint="#00AA64"
                            android:ems="10"
                            android:hint="@string/_0"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColorHint="#2E7D32"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="25sp"
                            android:paddingEnd="0sp"
                            android:text="@string/rea_de_plantaci_n_m2" />


                        <EditText
                            android:id="@+id/Edtext_Area"
                            android:layout_width="170sp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:layout_margin="20sp"
                            android:backgroundTint="#00AA64"
                            android:ems="10"
                            android:hint="@string/_0"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColorHint="#2E7D32"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </FrameLayout>

                </LinearLayout>

                <!-- Entradas de descripciones-->

                <TextView
                    android:id="@+id/txtCondicionesSitio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingStart="25sp"
                    android:paddingEnd="25sp"
                    android:text="@string/condiciones_del_sitio" />

                <EditText
                    android:id="@+id/Edtext_C_sitio"
                    android:layout_width="370dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:backgroundTint="#00AA64"
                    android:ems="10"
                    android:hint="@string/ingrese_las_condiciones_del_sitio"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />


                <!--Boton de guardar -->

                <Button
                    android:id="@+id/btn_GuardarRegistro"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="18dp"
                    android:backgroundTint="#00C814"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/guardar_registro"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:cornerRadius="10sp"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/btn_EliminarRegistro"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:backgroundTint="#B71C1C"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Eliminar Registros"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:cornerRadius="10sp"
                    tools:ignore="TextContrastCheck" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Este será el contenedor de las CardView -->
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>